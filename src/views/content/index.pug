//- Carasol Features
  Changes `features` Array to change displayed features
mixin carasol_feature()
  -
    var features = [
      {img: "pineapple.jpg", num: "01", slug: "work with a team"},
      {img: "blueberry.jpg", num: "02", slug: "free food"}
    ]
  
  each feat in features
    .single
      .image(style='background-image: url("public/img/' + feat.img '\")')
      .content
        .num= feat.num
        .slug= feat.slug


